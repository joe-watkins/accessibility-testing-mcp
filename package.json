{
  "name": "accessibility-testing-mcp",
  "version": "2.1.0",
  "description": "MCP server for accessibility testing using axe-core and IBM Equal Access",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "accessibility-testing-mcp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js",
    "postinstall": "npx playwright install chromium"
  },
  "keywords": [
    "mcp",
    "server",
    "accessibility",
    "a11y",
    "axe-core",
    "ibm-equal-access",
    "wcag",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "accessibility-checker": "^4.0.9",
    "axe-core": "^4.11.0",
    "playwright": "^1.49.0"
  },
  "devDependencies": {
    "@types/axe-core": "^2.0.2",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
